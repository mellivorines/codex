#if($moduleName != "")
package ${packageName}.${moduleName}.controller;
import ${packageName}.${moduleName}.entity.${ClassName}Entity;
import ${packageName}.${moduleName}.service.${ClassName}Service;
#else
package ${packageName}.controller;
import ${packageName}.entity.${ClassName}Entity;
import ${packageName}.service.${ClassName}Service;
#end

import org.springframework.data.domain.Page;
import org.springframework.data.domain.PageRequest;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import javax.annotation.Resource;

/**
 * ${tableComment}(${tableName})表控制层
 *
 * @author ${author} ${email}
 * @since ${version} ${date}
 */
@RestController
@RequestMapping("${tableName}")
public class ${ClassName}Controller {
    /**
     * 服务对象
     */
    @Resource
    private ${ClassName}Service ${className}Service;

    /**
     * 分页查询
     *
     * @param ${ClassName}Entity 筛选条件
     * @param pageRequest      分页对象
     * @return 查询结果
     */
    @GetMapping
    public ResponseEntity<Page<${ClassName}Entity>> queryByPage(${ClassName}Entity ${className}Entity, PageRequest pageRequest) {
        return ResponseEntity.ok(this.$${className}Service.queryByPage(${className}Entity, pageRequest));
    }

    /**
     * 通过主键查询单条数据
     *
     * @param id 主键
     * @return 单条数据
     */
    @GetMapping("{id}")
    public ResponseEntity<${ClassName}Entity> queryById(@PathVariable("id") Long id) {
        return ResponseEntity.ok(this.$${className}Service.queryById(id));
    }

    /**
     * 新增数据
     *
     * @param ${className}Entity 实体
     * @return 新增结果
     */
    @PostMapping
    public ResponseEntity<${ClassName}Entity> add(${ClassName}Entity ${className}Entity) {
        return ResponseEntity.ok(this.${className}EntityService.insert(${className}Entity));
    }

    /**
     * 编辑数据
     *
     * @param ${ClassName}Entity 实体
     * @return 编辑结果
     */
    @PutMapping
    public ResponseEntity<${ClassName}Entity> edit(${ClassName}Entity ${className}Entity) {
        return ResponseEntity.ok(this.${className}Service.update(${className}Entity));
    }

    /**
     * 删除数据
     *
     * @param id 主键
     * @return 删除是否成功
     */
    @DeleteMapping
    public ResponseEntity<Boolean> deleteById(Long id) {
        return ResponseEntity.ok(this.${className}Service.deleteById(id));
    }

}
